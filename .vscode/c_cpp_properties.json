        {
            "name": "Win64",
            "includePath": [
                "${workspaceFolder}/**",
                "${vcpkgRoot}/x64-windows/include"
            ],
            "defines": [
                "_DEBUG"
            ],
            "compilerPath": "cl.exe",
            "intelliSenseMode": "${default}",
            "cppStandard": "c++20"
        }
    ],
    "version": 4
}